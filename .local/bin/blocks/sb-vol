[[ $BLOCK_BUTTON -eq 1 ]] && setsid -f st -e pulsemixer

vol="$(pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}' | sed 's/%//')"
STATUS=$(pactl get-sink-mute @DEFAULT_SINK@ | awk '{print $2}')

icon="ï± "
[[ $vol -gt 0 ]] && icon="ğŸ”ˆ "
[[ $vol -gt 33 ]] && icon="ğŸ”‰ "
[[ $vol -gt 66 ]] && icon="ğŸ”Š "
[[ $STATUS = "yes" ]] && icon="ğŸ”‡ " && echo "$icon" && exit

echo "^b#005577^$icon$vol%"
