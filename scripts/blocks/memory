#!/bin/sh

. ~/.local/bin/blocks/color_themes/onedark

case $BLOCK_BUTTON in
  1) $TERMINAL -e btop ;;
  6) $TERMINAL -e "$EDITOR" "$0";;
esac

FG=$black
BG=$white

read -r TOT USED <<< "$( free -h | awk '/^Mem/ { print $2" "$3}' | sed s/i//g)"

#(( $(echo "${USED%?} > 5" |bc -l) )) && BG=$red && FG=$black

echo "^b$BG^^c$FG^ ï¡š ^c$BG^^b$FG^ $USED/$TOT"
